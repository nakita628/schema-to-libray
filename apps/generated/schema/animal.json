{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/animal",
  "$defs": {
    "animal": {
      "$id": "#animal",
      "type": "object",
      "title": "Animal",
      "description": "An animal that can have offspring",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the animal"
        },
        "species": {
          "type": "string",
          "description": "The species of the animal"
        },
        "offspring": {
          "type": "array",
          "items": {
            "$ref": "#animal"
          },
          "description": "List of child animals"
        }
      },
      "required": ["name", "species"],
      "additionalProperties": false
    }
  },
  "$ref": "#animal"
}
