{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/A.json",
  "title": "A",
  "type": "object",
  "required": ["id", "type", "payload"],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "type": {
      "type": "string",
      "enum": ["B", "C"]
    },
    "payload": {
      "oneOf": [{ "$ref": "#/definitions/B" }, { "$ref": "#/definitions/C" }]
    }
  },
  "definitions": {
    "B": {
      "type": "object",
      "required": ["type", "name", "detail"],
      "properties": {
        "type": {
          "const": "B"
        },
        "name": {
          "type": "string"
        },
        "detail": {
          "allOf": [
            { "$ref": "#/definitions/D" },
            {
              "type": "object",
              "properties": {
                "comment": {
                  "type": "string",
                  "default": "N/A"
                }
              }
            }
          ]
        }
      }
    },
    "C": {
      "type": "object",
      "required": ["type", "entries"],
      "properties": {
        "type": {
          "const": "C"
        },
        "entries": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/E"
          }
        }
      }
    },
    "D": {
      "type": "object",
      "required": ["score"],
      "properties": {
        "score": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100,
          "default": 50
        },
        "extra": {
          "anyOf": [{ "type": "null" }, { "$ref": "#/definitions/E" }]
        }
      }
    },
    "E": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "reference": {
          "$ref": "#/definitions/E"
        },
        "flags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true
        },
        "meta": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    }
  }
}
