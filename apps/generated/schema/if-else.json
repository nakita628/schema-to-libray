{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Vehicle",
  "type": "object",
  "properties": {
    "type": {
      "enum": ["car", "truck"]
    }
  },
  "required": ["type"],
  "if": {
    "properties": { "type": { "const": "truck" } }
  },
  "then": {
    "properties": {
      "cargoCapacity": { "type": "number", "minimum": 0 }
    },
    "required": ["cargoCapacity"]
  },
  "else": {
    "properties": {
      "passengerCount": { "type": "integer", "minimum": 1 }
    },
    "required": ["passengerCount"]
  }
}
